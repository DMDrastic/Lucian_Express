<%- include("../partials/header") %>




<div class="container">

<header class="jumbotron"> 
    <div class="container">
        <h1>Welcome to LucianExpress</h1>
        <p>View our hand-picked products from all over the Helen of the West-Indies!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/products/new">Add new Products</a>
            
            </p>
    </div>
</header>

<div class ="row text-center" style="display:flex; flex-wrap: wrap;"> 
     <% product.forEach(function(products){ %>
          <div class="col-md-3 col-sm-6">
             <div class="thumbnail">
                <img src=" <%= products.image %> ">
                <div class="caption">
                    <h4> <%= products.name %></h4>

                </div>
                <p>
                    <a href="/products/<%= products._id %>"  class="btn btn-primary">More info</a>
                </p>
            </div>
         </div>        
            
<% }); %>
    </div>
</div>  
<!-- closing div for container, the one 
for the row is above. -->


